<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body class="bg-dark bg-gradient">
    <%- include('partials/navbar.ejs') %>

    <!--Search-->
    <section id="searchSection">
        <div class="p-5 bg-light bg-opacity-25">
            <div class="container text-center">
                <h2 class="m-5 fw-bold text-dark">What are you looking for?</h2>
                <form class="input-group"  action="/browse/keywordSearch" method="POST">
                    <div class="container-fluid">
                        <input type="text" class="form-control" name="browseSearch">
                    </div>
                    
                    <div class="d-flex container-fluid">
                        <button class="btn btn-dark w-50" type="submit">Search by keyword</button>
                        <button class="btn btn-dark w-50" type="submit" formaction="/browse/moodSearch">Search by mood</button>
                    </div>
                </form>
            </div>
        </div>
        
    </section>

    <!--Browse-->
    <section id="browseSection">
        <div class="container d-flex flex-column align-items-center my-5">
            <% if(tableResult.length){ 
                for(let i=0;i<tableResult.length;i++){ %>
                <div class="card bg-dark text-light m-1 w-75 border p-3">
                    <div class="class-body row justify-content-between ">
                        <div class="col-11">
                            <p class="card-text cardWords"><%=tableResult[i].words%></p>
                            <p class="card-subtitle text-secondary"><%=tableResult[i].mood%></p>
                            <p class="card-subtitle text-muted mt-1"><%=tableResult[i].datetime%></p>
                        </div>
                        <div class="col-1 d-flex align-items-center p-0">
                            <a href="/delete/<%=tableResult[i].datetime%>" class="link-light"><i class="bi bi-trash"></i></a>
                        </div>
                    </div>
                </div>
            <% }} %>
            
        </div>
    </section>


    <%- include('partials/scripts.ejs') %>
</body>
</html>